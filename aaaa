class Auto():
    """
    класс автомобиль
    """
    color = 'white' # цвет
    power =  0 # мощность двигателя
    fuel_left = 0 # топлива в баке сейчас
    max_fuel = 100 # объём бака
    rasxod = 0.0 # расход топлива на 100
    way = 0 # пройдненый путь
    
    def __init__(self, color = '', power = 0, max_fuel=0, rasxod=0.0, float=0, fuel_left=0, way=0):
        self.set_color(color)
        self.power = power
        self.max_fuel = max_fuel
        self.rasxod = rasxod
        self.set_fuel(fuel_left)
        self.way = way
        
        
    def print(self):
        print(        f''' Цвет: {self.color}, 
        Пройденный путь: {self.way},
        Оставшееся топливо:{self.fuel_left},
        Расход топлива: {self.rasxod},
        Мощность: {self.power}''')
        
        
    def set_color(self, color):
        self.color = color
        """
        перекрасить автомобиль
        """
        
    def get_color(self):
        return self.color
        """
        узнать цвет
        """
        
    def set_fuel(self, fuel_left):
        if 0 > fuel_left or fuel_left > self.max_fuel:
            raise BaseException()
        self.fuel_left = fuel_left
        """
        топлива есть сейчас
        """
        
    
    def set_way(self, way):
        self.way += way
        self.minus_fuel(way)
        """
        пройдненный путь
        """
    
    def minus_fuel(self, way):
        self.fuel_left = self.fuel_left - self.way / 100 * self.rasxod
        if self.fuel_left < 0:
            raise BaseException()
            
    def is_white(self):
        if self.color == 'white':
            return 'YES'
        else:
            return 'NO'
        
def test_init_1():
    Auto(color='white',
        power=90,
        max_fuel=50,
        rasxod=9.3,
        fuel_left=0)


def test_init_2(color = 'blue'):
    Auto(color='white')


def test_color_1():
    c = Auto(color='white',
            power=90,
            max_fuel=50,
            rasxod=9.3,
            fuel_left=0)
    assert c.get_color() == 'white'


def test_color_2():
    c = Auto(color='white',
            power=90,
            max_fuel=50,
            rasxod=9.3,
            fuel_left=0)
    assert c.get_color() == 'white'
    c.set_color('red')


def test_color_3():
    c = Auto(color='white',
            power=90,
            max_fuel=50,
            rasxod=9.3,
            fuel_left=0)
    assert c.get_color() == 'white'
    c.set_color('red')
    assert c.is_white() == 'NO'
    assert c.get_color() == 'red'
    
bw = Auto('red', 300, 100, 6.0,50, 100)
bw.print()
bw.set_color('orange')
bw.set_way(100)
bw.print()
bw.set_way(80)
bw.print()
test_init_1()
test_init_2()
test_color_1()
test_color_2()
test_color_3()
